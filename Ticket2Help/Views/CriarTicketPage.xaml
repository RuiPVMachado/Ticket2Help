<Page x:Class="Ticket2Help.Views.CriarTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="709.254" d:DesignWidth="800"
      Title="Criar Novo Ticket">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Criar Novo Ticket" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Preencha as informações necessárias para criar um novo ticket de suporte" 
                           FontSize="12" 
                           Foreground="#E8F5E8"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="600">

                <!-- Informações Básicas -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Informações Básicas" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333"
                                   Margin="0,0,0,15"/>

                        <!-- Título -->
                        <TextBlock Text="Título do Ticket *" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTitulo" 
                                 Height="35"
                                 Padding="10,8"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 Margin="0,0,0,15"/>

                        <!-- Descrição -->
                        <TextBlock Text="Descrição *" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDescricao" 
                                 Height="80"
                                 Padding="10,8"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>

                        <!-- Prioridade e Tipo -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Prioridade -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Prioridade *" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cbPrioridade" 
                                          Height="35"
                                          FontSize="14"
                                          BorderBrush="#DDD"
                                          BorderThickness="1">
                                    <ComboBoxItem Content="Alta" Tag="Alta"/>
                                    <ComboBoxItem Content="Média" Tag="Media" IsSelected="True"/>
                                    <ComboBoxItem Content="Baixa" Tag="Baixa"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Tipo -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tipo de Ticket *" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <ComboBox x:Name="cbTipo" 
                                          Height="35"
                                          FontSize="14"
                                          BorderBrush="#DDD"
                                          BorderThickness="1"
                                          SelectionChanged="CbTipo_SelectionChanged">
                                    <ComboBoxItem Content="Hardware" Tag="Hardware"/>
                                    <ComboBoxItem Content="Software" Tag="Software"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Detalhes Hardware -->
                <Border x:Name="pnlHardware" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="🔧" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Detalhes de Hardware" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"/>
                        </StackPanel>

                        <!-- Equipamento -->
                        <TextBlock Text="Equipamento *" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEquipamento" 
                                 Height="35"
                                 Padding="10,8"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 Margin="0,0,0,15"/>

                        <!-- Avaria -->
                        <TextBlock Text="Descrição da Avaria *" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAvaria" 
                                 Height="60"
                                 Padding="10,8"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>
                    </StackPanel>
                </Border>

                <!-- Detalhes Software -->
                <Border x:Name="pnlSoftware" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="💻" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Detalhes de Software" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"/>
                        </StackPanel>

                        <!-- Aplicação -->
                        <TextBlock Text="Aplicação/Sistema *" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAplicacao" 
                                 Height="35"
                                 Padding="10,8"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 Margin="0,0,0,15"/>

                        <!-- Necessidade -->
                        <TextBlock Text="Descrição da Necessidade *" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNecessidade" 
                                 Height="60"
                                 Padding="10,8"
                                 FontSize="14"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>
                    </StackPanel>
                </Border>
                <!-- Seleção de Colaborador (visível apenas para Técnicos) -->
                <Border x:Name="pnlColaborador"
        Background="White"
        CornerRadius="8"
        Padding="20"
        Margin="0,0,0,20"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Colaborador *"
                   FontSize="12"
                   Foreground="#666"
                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbColaborador"
                  Height="35"
                  FontSize="14"
                  BorderBrush="#DDD"
                  BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Mensagem de Erro -->
                <Border x:Name="pnlError" 
                        Background="#FFEBEE" 
                        BorderBrush="#F44336" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="lblError" 
                                   Text="" 
                                   Foreground="#D32F2F" 
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Informação Adicional -->
                <Border Background="#E3F2FD" 
                        BorderBrush="#2196F3" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Padding="15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="💡" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Informação" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1976D2"/>
                        </StackPanel>
                        <TextBlock Text="• Todos os campos marcados com (*) são obrigatórios" 
                                   FontSize="12" 
                                   Foreground="#1565C0"
                                   Margin="0,0,0,3"/>
                        <TextBlock Text="• O ticket será criado com estado 'Por Atender'" 
                                   FontSize="12" 
                                   Foreground="#1565C0"
                                   Margin="0,0,0,3"/>
                        <TextBlock Text="• Receberá uma notificação quando o ticket for atendido" 
                                   FontSize="12" 
                                   Foreground="#1565C0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                        Content="Cancelar" 
                        Width="100"
                        Height="35"
                        Background="Transparent"
                        Foreground="#666"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        FontSize="14"
                        Margin="0,0,15,0"
                        Click="BtnCancelar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnCriar" 
                        Content="Criar Ticket" 
                        Width="120"
                        Height="35"
                        Background="#2E7D32"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="BtnCriar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#388E3C"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#1B5E20"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>